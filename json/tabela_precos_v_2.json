  "avaliacao": {
    "formula": "valor_avaliado = max(1, floor(base_venda * M_genero * (1 + bonus_evento) * (1 + bonus_loja)))",
    "definicoes": {
      "base_venda": "campo 'venda' da mídia",
      "M_genero": "multiplicador 'valor_mod' do tier de raridade do gênero em raridade_genero",
      "bonus_evento": "'bonus_valor_mod' do evento semanal ativo para o gênero (ou 0)",
      "bonus_loja": "'valor_mod_extra' do lojista especializado ao vender (ou 0)"
    }
  },

  "schema_instancia_midia_gravada": {
    "id_item": "referência a midias[].id",
    "selo_genero": "pop|rock|rnb|hiphop|metal|punk|hardcore|jazz|blues|mpb",
    "qualidade_gravacao": {"tipo": "float", "intervalo": [0.0, 1.0], "default": 1.0},
    "condicao": {"tipo": "float", "intervalo": [0.0, 1.0], "default": 1.0},
    "valor_final": "floor(valor_avaliado * qualidade_gravacao * condicao)"
  },

  "observacoes": [
    "Para aplicar selos: use 'generos_suportados' da mídia para validar 'selo_genero'.",
    "'drop_mod' dos gêneros afeta spawn/loot; pode ser usado no gerador de mundo/eventos."
  ]
}
